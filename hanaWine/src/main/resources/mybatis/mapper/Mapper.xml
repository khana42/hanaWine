<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE	mapper	PUBLIC	"-//mybatis.org//DTD Mapper 3.0//EN"
		"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="com.proj.dao.UserMapper">

	<select id="getUserID" resultType="com.proj.dto.UserVO">
	SELECT * FROM Join_MEMBER 
	</select>
	
	<select id="getUserByUid" resultType="com.proj.dto.UserVO">
	SELECT * FROM Join_MEMBER WHERE memberId=#{memberId}
	</select>
	
  <insert id="memberjoin" parameterType="com.proj.dto.UserVO">
  
  	insert into Join_MEMBER (memberName, memberId, memberPw, memberMail, memberAddr1, memberPhone) values
  	(#{memberName}, #{memberId}, #{memberPw}, #{memberMail}, #{memberAddr1}, #{memberPhone})
  </insert>
	
</mapper>